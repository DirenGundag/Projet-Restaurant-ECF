{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block content %}
<div class="container">
    <h1>Catégorie</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr> #}
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>
    

    <a class="btn" href="{{ path('app_category_index') }}">Précédent</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn" href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>

    {{ include('category/_delete_form.html.twig') }}
{% endif %}
<h4>Plats</h4>
    <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Description</th>
                    <th scope="col">Prix</th>
                </tr>
            </thead>
            <tbody>
                {% for plat in plats %} 
                 <tr>
                    <td>
                        {{ plat.title }}
                    </td>
                    <td>
                        {{ plat.description|nl2br }}
                    </td>
                    <td>
                        {{ plat.price }}
                    </td>
                </tr> 
                 {% endfor %}
            </tbody>
        </table>
</div>
         <style>
    .btn {
        background-color:B87333;
        color:FFFFFF;
        margin-top:2%;
    }
     a:hover {
  color:000000;
}
.table {
    margin-top:2%;
}
h1 {
    font-family: Arial;
    text-align: center;
}
h4 {
    margin-top:2%;
    margin-left: 1%;
    font-family: Arial;
}
</style>
{% endblock %}
