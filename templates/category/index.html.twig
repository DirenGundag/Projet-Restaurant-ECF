{% extends 'base.html.twig' %}

{% block title %}
    Catégorie 
{% endblock %}

{% block content %}
    <div class="container">
        <h1>
            Catégorie 
        </h1>

        <table class="table">
            <thead>
                <tr>{# <th>Id</th> #}
                {# <th>Nom</th> #}
                {# <th>actions</th> #}
            </tr>
            </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                        {# <td>{{ category.id }}</td> #}
                            <td>
                        {{ category.name }}
                        </td>
                            <td>
                                <a class="btn" href="{{ path('app_category_show', {'id': category.id}) }}"> Afficher
                            </a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="btn" href="{{ path('app_category_edit', {'id': category.id}) }}">
                                    Modifier
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">
                            no records found
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn" href="{{ path('app_category_new') }}">
                Ajouter une nouvelle catégorie
            </a>
        {% endif %}
    </div>
    <style>
    .btn {
        background-color:B87333;
        color:FFFFFF;
        
    }
     a:hover {
  color:000000;
}
h1 {
    font-family: Arial;
    text-align: center;
}
</style>
{% endblock %}
