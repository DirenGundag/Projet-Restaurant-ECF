    .personne{
        font-size: 12px;
        margin-left: -150%;
    }
    .heure{
        font-size: 12px;
    }
    .date{
        font-size: 12px;
    }
    .allergies{
        font-size: 12px;
    }
    .btnmobile{
        width: 60px;
        font-size: 10px;
        margin-bottom: 10px;
    }
}
</style>
{% endblock %}
