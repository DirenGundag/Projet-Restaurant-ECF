{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block content %}
<div class="container">
    <h1>Réservation</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr> #}
            <tr>
                <th>Nombre de Personne</th>
                <td>{{ reservation.nombreCouvert }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ reservation.heure ? reservation.heure|date('H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reservation.date ? reservation.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Allergies</th>
                <td>{{ reservation.allergies }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_reservation_index') }}">Précédent</a>

    <a class="btn" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Modifier</a>

    {{ include('reservation/_delete_form.html.twig') }}
</div>
     <style>
    .btn {
        background-color:B87333;
        color:FFFFFF;
        
    }
     a:hover {
  color:000000;
}
h1 {
    font-family: Arial;
    text-align: center;
}
</style>
{% endblock %}
