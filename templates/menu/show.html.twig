{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block content %}
<div class="container">
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr> #}
            <tr>
                <th>Nom</th>
                <td>{{ menu.title }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_menu_index') }}">Précédent</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn" href="{{ path('app_menu_edit', {'id': menu.id}) }}">Modifier</a>

    {{ include('menu/_delete_form.html.twig') }}
{% endif %}
<h4>Formules</h4>
    <table class="table">
            <thead>
                <tr>
                    <th scope="col">Description</th>
                    <th scope="col">Prix</th>
                </tr>
            </thead>
            <tbody>
                {% for formule in formule %} 
                 <tr>
                    <td>
                        {{ formule.description|nl2br }}
                    </td>
                    <td>
                        {{ formule.price }}
                    </td>
                </tr> 

                 {% endfor %}
            </tbody>
        </table>
    </div>
        <style>
    .btn {
        background-color:B87333;
        color:FFFFFF;
        margin-top:2%;
    }
     a:hover {
  color:000000;
}
.table {
    margin-top:2%;
}
h1 {
    font-family: Arial;
    text-align: center;
}
h4 {
    margin-top:2%;
    margin-left: 1%;
    font-family: Arial;
}
</style>
{% endblock %}
