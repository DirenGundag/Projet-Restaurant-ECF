{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block content %}
<div class="container">
    <h1>Image</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr> #}
            <tr>
                <th>Nom</th>
                <td>{{ image.title }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ image.imageName }}</td>
            </tr>
            <tr>
                <th>Mis à jour</th>
                <td>{{ image.updateAt ? image.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Créer</th>
                <td>{{ image.createAt ? image.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_image_index') }}">Précédent</a>

    <a class="btn" href="{{ path('app_image_edit', {'id': image.id}) }}">Modifier</a>

    {{ include('image/_delete_form.html.twig') }}
</div>
<style>
    .btn {
        background-color:B87333;
        color:FFFFFF;
        margin-top:2%;
    }
     a:hover {
  color:000000;
}
h1 {
    font-family: Arial;
    text-align: center;
}
</style>
{% endblock %}
